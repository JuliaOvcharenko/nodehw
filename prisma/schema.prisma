generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Post {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  image       String
  tags                PostTag[]
  createdBy   User    @relation(fields: [createdById], references: [id])
  createdById Int
  likes               PostLike[]

}

model Tag {
  id   Int    @id @default(autoincrement())
  name String
  posts       PostTag[]
}

model PostTag {
  post    Post  @relation(fields: [postId], references: [id])
  postId  Int
  tag     Tag   @relation(fields: [tagId], references: [id])
  tagId   Int 

// Создаем id для PostTag из двух иностранных ключей 
  @@id([postId, tagId])
}


model User {
  id       Int     @id @default(autoincrement())
  firstName String
  secondName  String
  email    String  @unique
  avatar   String?
  password String
  isAdmin  Boolean @default(false)
  createdPosts Post[]
  likedPosts   PostLike[]
  
}

model PostLike {
  likedPost   Post  @relation(fields: [postId], references: [id])
  postId      Int
  likedBy     User  @relation(fields: [userId], references: [id])
  userId      Int
  @@id([postId, userId])
}

